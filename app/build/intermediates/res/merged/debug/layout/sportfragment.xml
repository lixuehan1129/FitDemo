<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/sportFragment_mainTool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:titleTextColor="@color/colorBlack"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_below="@id/sportFragment_mainTool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_gb_green">

                    <LinearLayout
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="累计运动时长"
                            android:textSize="10sp"
                            android:textColor="@color/colorBlack"
                            tools:ignore="NestedWeights" />

                        <LinearLayout
                            android:paddingTop="4dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/sportFragment_data1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4396"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="24sp"/>

                            <TextView
                                android:paddingLeft="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="小时"/>

                        </LinearLayout>

                        <LinearLayout
                            android:paddingTop="6dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="累计消耗（千卡）"
                                    android:textSize="10sp"/>

                                <TextView
                                    android:paddingTop="3dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="777"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorBlack"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="累计运动（天）"
                                    android:textSize="10sp"/>

                                <TextView
                                    android:paddingTop="3dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="77"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorBlack"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="运动指数"
                                    android:textSize="10sp"/>

                                <TextView
                                    android:paddingTop="3dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="95"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorBlack"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

            </LinearLayout>




            <LinearLayout
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:padding="10dp"
                    android:layout_marginRight="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/round_gb_gray">

                            <LinearLayout
                                android:paddingBottom="18dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_gravity="center"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@mipmap/ic_launcher_round"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="步数"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorBlack"
                                    android:paddingLeft="5dp"
                                    android:layout_gravity="center"/>

                            </LinearLayout>


                            <LinearLayout
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingBottom="15dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="今日步数"
                                    android:textSize="10sp"
                                    android:textColor="@color/colorBlack"
                                    tools:ignore="NestedWeights" />

                                <LinearLayout
                                    android:paddingTop="4dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="4396"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="24sp"/>

                                    <TextView
                                        android:paddingLeft="5dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="步"/>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_weight="1"
                                android:paddingBottom="8dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:text="累计步数记录"
                                    android:textSize="10sp"
                                    android:textColor="@color/colorBlack"
                                    tools:ignore="NestedWeights" />

                                <LinearLayout
                                    android:paddingTop="4dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="77777"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="24sp"/>

                                    <TextView
                                        android:paddingLeft="5dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="步"/>

                                </LinearLayout>

                            </LinearLayout>

                </LinearLayout>




                <LinearLayout
                    android:layout_weight="1"
                    android:paddingLeft="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginBottom="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        tools:ignore="NestedWeights"
                        android:orientation="vertical"
                        android:background="@drawable/round_gb_orange">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:paddingBottom="15dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_gravity="center"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@mipmap/ic_launcher_round"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="跑步"
                                        android:textSize="12sp"
                                        android:textColor="@color/colorBlack"
                                        android:paddingLeft="5dp"
                                        android:layout_gravity="center"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:paddingTop="4dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="43.96"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="15sp"/>

                                    <TextView
                                        android:paddingLeft="5dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="公里"/>

                                </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:background="@drawable/round_gb_gray">

                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:paddingBottom="15dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:layout_gravity="center"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@mipmap/ic_launcher_round"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="骑行"
                                        android:textSize="12sp"
                                        android:textColor="@color/colorBlack"
                                        android:paddingLeft="5dp"
                                        android:layout_gravity="center"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:paddingTop="4dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="43.96"
                                        android:textStyle="bold"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:textSize="15sp"/>

                                    <TextView
                                        android:paddingLeft="5dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="公里"/>

                                </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_marginRight="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="10dp"
                    tools:ignore="NestedWeights"
                    android:orientation="vertical"
                    android:background="@drawable/round_gb_green">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:paddingBottom="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_gravity="center"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@mipmap/ic_launcher_round"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="行走"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorBlack"
                                    android:paddingLeft="5dp"
                                    android:layout_gravity="center"/>

                            </LinearLayout>

                            <LinearLayout
                                android:paddingTop="4dp"
                                android:paddingBottom="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="4.396"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="15sp"/>

                                <TextView
                                    android:paddingLeft="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="公里"/>

                            </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="6dp"
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/round_gb_pink">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:paddingBottom="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:layout_gravity="center"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@mipmap/ic_launcher_round"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="瑜伽"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorBlack"
                                    android:paddingLeft="5dp"
                                    android:layout_gravity="center"/>

                            </LinearLayout>

                            <LinearLayout
                                android:paddingTop="4dp"
                                android:paddingBottom="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="43.96"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:textSize="15sp"/>

                                <TextView
                                    android:paddingLeft="5dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="分钟"/>

                            </LinearLayout>

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                android:background="@drawable/round_gb_gray">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="每周目标"
                            android:textSize="12sp"
                            android:textColor="@color/colorBlack"/>

                        <TextView
                            android:paddingTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="还没有目标"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="40dp"/>

            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                android:background="@drawable/round_gb_gray">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="每周周报"
                            android:textSize="12sp"
                            android:textColor="@color/colorBlack"/>

                        <TextView
                            android:paddingTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="查看你的运动周报"
                            android:textSize="12sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="80dp"/>

            </LinearLayout>





        </LinearLayout>

    </ScrollView>

</RelativeLayout>