<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray_White"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/subscribeFragment_mainTool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        app:titleTextColor="@color/colorBlack"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_margin="10dp"
        android:layout_below="@id/subscribeFragment_mainTool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/subscribeFragment_l"
        android:background="@drawable/round_gb">

            <LinearLayout
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="已经坚持锻炼"
                    android:textSize="10sp"
                    android:textColor="@color/colorBlack" />

                <RelativeLayout
                    android:paddingTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/sportFragment_data1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4396"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="24sp"/>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/sportFragment_data1"
                        android:layout_alignBottom="@+id/sportFragment_data1"
                        android:layout_toEndOf="@+id/sportFragment_data1"
                        android:paddingLeft="5dp"
                        android:text="   天" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textView6"
                        android:layout_toStartOf="@+id/textView6"
                        android:text="今日运动  "
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/textView5"
                        android:layout_alignBottom="@+id/textView5"
                        android:layout_toStartOf="@+id/textView5"
                        android:paddingTop="3dp"
                        android:text="777"
                        android:textColor="@color/colorBlack"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/textView4"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="36dp"
                        android:text="  分钟"
                        android:textSize="11sp" />

                </RelativeLayout>

            </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_below="@+id/subscribeFragment_l"
        android:id="@+id/subscribeFragment_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="    为你推荐的内容"
        android:textColor="@color/colorBlack"
        android:background="@color/colorGray_White"
        android:paddingTop="5dp"/>

    <android.support.v7.widget.RecyclerView
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/round_gb"
        android:id="@+id/subscribeFragment_rv"
        android:layout_below="@+id/subscribeFragment_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>